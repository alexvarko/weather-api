{
  "name": "weather-api",
  "version": "1.0.0",
  "description": "Weather API application with subscription to weather updates",
  "main": "dist/server.js",
  "imports": {
    "#*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*.js",
      "./src/*.jsx",
      "./src/*/index.ts",
      "./src/*/index.tsx",
      "./src/*/index.js",
      "./src/*/index.jsx"
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run copy-swagger && tsc-alias",
    "copy-swagger": "copyfiles -u 1 src/swagger.yaml dist",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback"
  },
  "dependencies": {
    "@types/yaml": "^1.9.6",
    "axios": "^0.21.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "p-retry": "^6.2.1",
    "pg": "^8.16.0",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^3.12.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.14.31",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "jest": "^26.6.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "keywords": [
    "typescript",
    "api",
    "express"
  ],
  "author": "Oleksandr Varchenko",
  "license": "MIT"
}
