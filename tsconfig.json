{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "#*": ["./*"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.yaml"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}